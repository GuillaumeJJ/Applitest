<%= form_for @booking, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :user_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :show_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :show_id, :class => 'text_field' %>
    </div>
  <div class="control-group">
    <%= f.label :commentaire, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :commentaire, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bookings_path, :class => 'btn' %>
  </div>
<% end %>
